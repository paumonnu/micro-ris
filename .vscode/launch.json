  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to NodeJS",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Docker: Attach to NodeJS",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/home/node/app",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
